{
  "name": "unsourced.org",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Display sources and warning labels for news articles",
  "icons": {
             "16": "img/icon.png",
             "48": "img/icon.png",
            "128": "img/icon.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["js/lib/parseuri.js","js/lib/jquery.js","js/news_sites.js","js/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["/js/content.js"],
    "css": ["css/content.css"],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_icon": "img/unsourced.png",
    "default_title": "",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "tabs", 
    "http://*/*",
    "https://*/*"
  ]
}

